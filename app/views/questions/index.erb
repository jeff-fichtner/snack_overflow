<div class='index-container'>
	<h2>Questions:</h2>
	<ul>
		<% @questions.each do |question| %>
		  <li>
		    <span class='vote-count'><%= question.total_votes %> votes  ||  </span>
		    <span id ='<%= question.id %>'><a href='/questions/<%= question.id %>'><%= question.title %></a></span>
		  </li>
		<% end %>
	</ul>
</div>

<a id='new_question' href="/questions/new">Add a new question</a>